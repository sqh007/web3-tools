# ✅ 网络配置
RPC_URL=https://binance.llamarpc.com       

# ✅ 代币配置
TOKEN_ADDRESS=0x8d0D000Ee44948FC98c9B98A4FA4921476f08B0d

# ✅ 金额模式（五选一）
# 模式类型：fixed | range | all | percent | remain
TRANSFER_MODE=fixed                             

TRANSFER_FIXED=0.5                            # 模式=fixed时，固定金额

TRANSFER_MIN=0.1                                # 模式=range时，最小金额
TRANSFER_MAX=0.50                               # 模式=range时，最大金额
TRANSFER_RANDOM_DECIMALS=3                      # 模式=range时，强制保留的随机小数位数

TRANSFER_PERCENT=0.1                            # 模式=percent时，发送余额的百分比（如0.5表示50%）

TRANSFER_REMAIN=13                            # 模式=remain时，保留余额数，发送其余部分

# ✅ Gas 设置
GAS_PRICE_MODE=auto                             # Gas价格模式：auto 或 fixed
GAS_PRICE_GWEI=5                                # 固定Gas时的价格（单位GWEI）

GAS_LIMIT_MODE=auto                             # Gas上限模式：auto 或 fixed
GAS_LIMIT=21000                                 # 固定Gas时的Gas上限

# ✅ 延迟配置（每次发送之间的等待秒数）
DELAY_MIN=1
DELAY_MAX=3

# ✅ 地址文件名（位于 doc 文件夹下）
# 格式：私钥:接收地址
ADDRESS_FILE=transferInfo.txt
